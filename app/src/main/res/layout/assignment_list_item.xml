<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/length_small"
    android:paddingBottom="@dimen/length_small"
    android:weightSum="1">

    <TextView
        android:id="@+id/assignment_due_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_centerVertical="true"
        android:padding="@dimen/length_tiny"
        android:text="8/16" />

    <TextView
        android:id="@+id/assignment_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="center_vertical|left"
        android:paddingLeft="@dimen/length_small"
        android:paddingRight="@dimen/length_small"
        android:text="@string/assignment_title_label" />

    <CheckBox
        android:id="@+id/assignment_completed"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_alignParentRight="true"
        android:enabled="false"
        android:focusable="false"
        android:padding="@dimen/length_tiny" />

</LinearLayout>